<link rel="stylesheet" href="/stylesheets/showPage.css">


<h1 class="mb-1 restaurant-show-title">新建</h1>
<div class="container">
  <div class="form-row">
    <div class="col-12 col-md-10 mx-auto">

      <form action="/restaurants" method="POST">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            餐廳名稱：
          </span>
          <input type="text" placeholder="輸入餐廳名稱..." name="name" class="form-control" min="1" max="25" required>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            餐廳英文名稱：
          </span>
          <input type="text" placeholder="輸入餐廳英文名稱..." name="name_en" class="form-control" min="1" max="25" required>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" placeholder="輸入料理類別..." name="category" class="form-control" min="1" max="25" required>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" placeholder="輸入地址..." name="location" class="form-control" min="1" max="25" required>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
            Google地圖網址：
          </span>
          <input type="url" placeholder="輸入Google地圖網址..." name="google_map" class="form-control" min="1" max="500"
            required>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="tel" placeholder="輸入電話號碼..." name="phone" class="form-control" required>
        </p>


        <p class="mb-1">
          <span class="text-secondary">
            <li>評分：</li>
          </span>
          <input type="number" step="0.1" placeholder="輸入評分..." name="rating" class="form-control" min="1" max="5"
            required>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <li>餐廳敘述：</li>
          </span>
          <textarea type="text" placeholder="輸入餐廳描述..." name="description" class="form-control" rows="5"
            required></textarea>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <li>圖片網址：</li>
            <input type="url" placeholder="輸入圖片網址..." name="image" class="form-control" min="1" max="500" required>
          </span>
        </p>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-light">
      儲存
    </button>
    </form>
    <a href="/">
      <button class="btn btn-light">
        取消
      </button>
    </a>
  </div>
</div>
</div>